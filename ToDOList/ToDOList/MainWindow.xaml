<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDOList"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="ToDOList.MainWindow"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d" Height="600" Width="1080" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Grid Height="65" VerticalAlignment="Top" Background="#FF0694F7">
            <TextBlock Text="To Do" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="22" Margin="40,22,0,22" Foreground="#FFECE4E4" FontFamily="Consolas"></TextBlock>
            <fa:ImageAwesome Icon="List" Width="22" Foreground="White" Margin="13,0,1045,0" RenderTransformOrigin="-0.091,0.536"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 20 0">
                <Button x:Name="BtnClose" Click="BtnClose_Click" Width="30" Height="30" Background="{x:Null}" BorderBrush="{x:Null}">
                    <fa:ImageAwesome Icon="Close" Width="25" Foreground="White" HorizontalAlignment="Right"></fa:ImageAwesome>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Width="250" Margin="0,0,830,0" Grid.Row="1" Background="#FFEBECFB" HorizontalAlignment="Left">
            <StackPanel>
                <Grid Height="40">

                </Grid>
                <ListView x:Name="ListMenu" SelectionChanged="ListMenu_SelectionChanged">
                    <ListViewItem Background="#FFEBECFB" Height="40" Tag="我的一天">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome Icon="Dashboard" FontSize="30" VerticalAlignment="Center"></fa:FontAwesome>
                            <TextBlock Text="我的一天" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10 0 0 0"></TextBlock>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Background="#FFEBECFB" Height="40">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome Icon="Star" FontSize="30" VerticalAlignment="Center"></fa:FontAwesome>
                            <TextBlock Text="重要" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10 0 0 0"></TextBlock>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Background="#FFEBECFB" Height="40">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome Icon="ThumbTack" FontSize="30" VerticalAlignment="Center"></fa:FontAwesome>
                            <TextBlock Text="已計劃" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10 0 0 0"></TextBlock>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Background="#FFEBECFB" Height="40">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome Icon="User" FontSize="30" VerticalAlignment="Center"></fa:FontAwesome>
                            <TextBlock Text="已指派給您" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10 0 0 0"></TextBlock>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Background="#FFEBECFB" Height="40">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome Icon="Check" FontSize="30" VerticalAlignment="Center"></fa:FontAwesome>
                            <TextBlock Text="工作" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10 0 0 0"></TextBlock>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Grid>

        <Grid HorizontalAlignment="Left" Height="40" Margin="250,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="830">
            <StackPanel Margin="10 0 0 0">
                <TextBlock x:Name="TitleText" Text="{Binding ElementName=ListMenu, Path=SelectedItems}" FontSize="20"/>
                <TextBlock Text="{Binding Source={x:Static system:DateTime.Now},StringFormat=MMM d yyyy}" />
            </StackPanel>
        </Grid>

        <Grid Margin="250,45,0,450" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <fa:FontAwesome Icon="plus" FontSize="30" VerticalAlignment="Center"></fa:FontAwesome>
            <TextBox Name="inputText" Grid.Column="1" KeyDown="inputText_KeyDown">
                <TextBox.Resources>
                    <VisualBrush x:Key="hinttext" TileMode="None" AlignmentX="Left" Stretch="None">
                        <VisualBrush.Visual>
                            <TextBlock Text="新增工作"/>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </TextBox.Resources>

                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background" Value="{StaticResource hinttext}"/>
                            </Trigger>

                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter Property="Background" Value="{StaticResource hinttext}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>

            </TextBox>
        </Grid>
        <ListBox HorizontalAlignment="Left" Height="450" Margin="250,85,0,0" Grid.Row="1" VerticalAlignment="Top" Width="830"/>

    </Grid>
</Window>
